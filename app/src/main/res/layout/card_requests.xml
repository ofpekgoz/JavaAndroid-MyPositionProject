<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFollowFrieds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardbacground">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageRequest"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/usericon"
                app:civ_border_color="#3E111210"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtKullaniciAdiRequest"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="9dp"
                android:gravity="center|left"
                android:text="Kaan"
                android:textColor="@color/colorbtntextcolor"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/txtEmailRequest"
                app:layout_constraintStart_toEndOf="@+id/profileImageRequest" />

            <TextView
                android:id="@+id/txtEmailRequest"
                android:layout_width="156dp"
                android:layout_height="42dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:gravity="center|left"
                android:text="Kaan@gmail.com"
                android:textColor="@color/colorbtntextcolor"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/profileImageRequest"
                app:layout_constraintTop_toBottomOf="@+id/txtKullaniciAdiRequest" />

            <Button
                android:id="@+id/btnKabulEtRequest"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:text="Kabul Et"
                android:background="@color/btnkabulet"
                android:textColor="@color/colorbtntextcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnReddetRequest"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:background="@color/btnreddet"
                android:text="Reddet"
                android:textColor="@color/colorbtntextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnArkadasSilFollowFriends" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>